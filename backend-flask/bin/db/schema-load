#!/usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

schema_path="backend-flask/db/sql/schema.sql"
echo "Loading schema from: ${schema_path}"

cat $schema_path | docker-compose exec -T db psql --username "$PG_DATABASE" --dbname "$PG_DATABASE"