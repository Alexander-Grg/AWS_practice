#!/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-seed"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

seed_path="$(realpath .)/backend-flask/db/sql/seed.sql"
echo $seed_path

if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  URL=$PROD_CONNECTION_STRING
else
  URL=$CONNECTION_STRING
fi

# Replace the internal hostname 'db' with 'localhost' for host access
URL="${URL/@db/@localhost}"

psql "$URL" < "$seed_path"